<div class="container articles">
  
    
    <% @articles.each do |article| %>
    <div class="article">
      <div class="container">
        <p class="date"><%= article.created_at.strftime('%b %d') %></p>
        <!-- http://stackoverflow.com/questions/1086360/how-do-i-wrap-link-to-around-some-html-ruby-code -->
        <%= link_to(article) do %>
          <h2><%= article.title %></h2>
        <% end %>
        <p class="author">by <%= article.author %></p>
        <p class="article_content"><%= simple_format(truncate(article.body , :length => 140), class: 'article_content') %></p>
      </div>
    </div>
    <% end %>

    <div class="container">
      <%= link_to "Create new article", new_article_path(), :class => "btn-new" %>
    </div>

 
</div>